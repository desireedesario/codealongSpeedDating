<h1>Add a new Codealong location and time for <%= @language.name %>!</h1>

<%= form_for @language.codealongs.each do |f| %>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div>

    <%= f.label :date %> (Must be create a week prior to the event)
    <%= f.text_field :date %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
    <%= f.submit "Add this codealong" %>

<% end %>
 <p>
   Warning: if codealongs do not gather more than 15 attendees by one week, this codealong will not be allowed to take place.
 </p>

<%= link_to "Click to go back to more codealongs!", language_show_path(language) %>
