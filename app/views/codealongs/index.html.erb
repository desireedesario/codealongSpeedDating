<h1>Different Codealongs for Javascript</h1>

<ul class="data">
  <% @codealongs.each do |codealong| %>
    <li>
      <strong>
        <%= codealong.location %>
      </strong> <%= codealong.date %>
    <li>
      <%= codealong.description %>
    </li>
    <li>
      <button type="button" class="btn btn-default navbar-btn"><%= link_to 'View', codealong %></button>

      <button type="button" class="btn btn-default navbar-btn"><%= link_to "Edit", edit_codealong_path(codealong) %></button>

      <button type="button" class="btn btn-default navbar-btn"><%= link_to "Delete this codealong", codealong, method: :delete, data: {confirm: "Are you sure you want to delete this codealong?"} %></button>
    </li>
  <% end %>
</ul>
