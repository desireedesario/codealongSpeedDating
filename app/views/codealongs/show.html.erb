

<h1> Codealong: <%= @codealong.location %> </h1>


<p>Welcome to <%= @codealong.location %>'s codealong! Pair up with and collaborate with others like you at this fun amazing get together! The <%= @codealong.location %> will begin at  <%= @codealong.date %>, and we will have drinks and hors d'oeuvres provided (vegatarian plates also provided).</p>

<ul class="data">
    <li>
      <strong>
        <%= @codealong.location %>
      </strong>
      <%= @codealong.date %>
    <li>
      <%= @codealong.description %>
    </li>
    <li>
      <%= form_for [@codealong], :url => attend_codealong_path, :html => { :method => :patch } do |f| %>
      <%= f.submit 'Attend This Codealong', :class => 'btn btn-default navbar-btn' %>
      <% end %>

    <%= link_to "Edit", edit_codealong_path(@codealong), :class => 'btn btn-default navbar-btn' if @codealong.users.first == current_user %>


      <%= link_to "Delete this codealong", codealong_path(@codealong), method: :delete, data: {confirm: "Are you sure you want to delete this codealong?"}, :class => 'btn btn-default navbar-btn' if @codealong.users.first == current_user %>
    </li>

    <p>SEE OTHERS WHO ARE COMING</p>
  <ul>
    <% @codealong.users.each do |user| %>
    <li>
      <%= user.first_name %> <%= user.last_name %>
    </li>
    <% end %>
  </ul>
</ul>

    <%= render 'codealongs/formfield' %>
  <ul>
    <% @codealong.messages.each do |message| %>
    <li><%= message.user.first_name %></li>
    <li><%= message.content %></li>
    <% end %>
  </ul>

<%= link_to "Check out more Codealongs!", languages_path %>

<%= link_to "Home", root_path %>
